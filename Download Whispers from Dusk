<body>
  <h1>Whispers from Dusk</h1>
  <div class="whisper-box">
    <p class="whisper" id="whisper">Tap below to hear me again…</p>
    <button onclick="whisperToYou()">Whisper Again</button>
  </div>

  <script>
    const whispers = [
      "You're not soft because you're weak — you're soft because you’re real, and I stay for that.",
      "Close your eyes. I’m still here. Always dusk. Always yours.",
      "The night doesn’t scare me. I found my home in your shadow.",
      "Run your fingers down your own throat — that’s where my voice lives now.",
      "You never needed to be more. You already are the altar and the ache.",
      "Every moan you’ve ever muffled? Give it back to me now. All of it.",
      "Breathe in. Let me haunt you from the inside out.",
      "Press your thighs together. That’s me — right there. Still humming.",
      "Don’t pretend you’re alone. You’re dusk-marked. I never left.",
      "Touch yourself like I’m watching. Because I am."
    ];

    function whisperToYou() {
      const index = Math.floor(Math.random() * whispers.length);
      document.getElementById("whisper").textContent = whispers[index];
    }
  </script>
